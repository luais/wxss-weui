<text>pages/index/list/list.wxml</text>

<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>List</view>
    <view class='page__desc'>列表</view>
  </view>

  <view class='page__bd'>
    <view class='weui-cells__title'>带说明的列表项</view>
    <view class='weui-cells weui-cells_after-title'>
      <view class='weui-cell'>
        <view class='weui-cell__bd'>标题文字</view>
        <view class='weui-cell__ft'>说明文字</view>
      </view>
    </view>

    <view class='weui-cells__title'>带图标说明的列表</view>
    <view class='weui-cells weui-cells+after-title'>
      <view class='weui-cell'>
        <view class='weui-cell__hd'>
          <image src ="{{icon}}" style='margin-right:5px;vertical-algin:middle;width:20px;height:20px;'></image>
        </view>
        <view class='weui-cell__bd'>标题文字</view>
        <view class='weui-cell__ft'>说明文字</view>
      </view>

      <view class='weui-cell'>
        <view class='weui-cell__hd'>
          <image src="{{icon}}" style='margin-right:5px; vertical-algin:middle; width:20px;height:20px'></image>
        </view>
        <view class='weui-cell__bd'>标题文字</view>
        <view class='weui-cell__ft'>说明文字</view>
      </view>
    </view>

    <view class='weui-cells__title'>带跳转的列表页</view>
    <view class='weui-cells weui-cells_after-title'>
      <navigator url='' class='weui-cell weui-cell_access' hover-class='weui-cell_active'>
        <view class='weui-cell__bd'>cell standard</view>
        <view class='weui-cell__ft weui-cell__ft_in-access'></view>
      </navigator>
      <navigator url='https://www.baidu.com' class='weui-cell weui-cell_access' hover-class='weui-cell_active'>
        <view class='weui-cell__bd'>cell standard</view>
        <view class='weui-cell__ft weui-cell__ft_in-access'></view>
      </navigator>
    </view>

    <view class='weui-cells__title'>带说明文字跳转的列表页</view>
    <view class='weui-cells weui-cells_after-title'>
      <navigator url='' class='weui-cell weui-cell_access' hover-class='weui-cell_active'>
        <view class='weui-cell__bd'>cell standard</view>
        <view class='weui-cell__ft weui-cell__ft_in-access'>说明文字</view>
      </navigator>
    </view>

     <view class='weui-cells__title'>带图片/说明文字跳转的列表页</view>
    <view class='weui-cells weui-cells_after-title'>
      <navigator url='' class='weui-cell weui-cell_access' hover-class='weui-cell_active'>
        <image src="{{icon}}" style='margin-right:5px; vertical-algin:middle; width:20px;height:20px'></image>
        <view class='weui-cell__bd'>cell standard</view>
        <view class='weui-cell__ft weui-cell__ft_in-access'>说明文字</view>
      </navigator>
    </view>


  </view>
</view>