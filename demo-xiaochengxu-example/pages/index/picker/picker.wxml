<!--pages/index/picker/picker.wxml-->
<text>pages/index/picker/picker.wxml</text>

<view class='page'>
  <view class='page__hd'>
    <view class='page__title'>选择器</view>
    <view class='page__desc'>picker</view>
  </view>
 

 <view class='page__bd'>
   <view class='weui-btn-area'>
     <picker bindchange='bindPickerChange' value="{{index}}" range="{{array}}">
       <button type='default'>单列选择器</button>
     </picker>

     <picker class='weui-btn' mode='time' value="{{time}}" start="09:01" end="21:01" bindchange='bindTimeChange'>
       <button type='default'>时间选择器</button>
     </picker>

     <picker class="weui-btn" mode="date" value="{{date}}" start="2015-09-01" end="2016-09-01" bindchange='bindDateChange'>
       <button type='default'>日期选择器</button>
     </picker>

     <picker class="weui-btn" mode="date" value="{{date}}" start="2018-10-10" end="2020-10-10" bindchange="bindDateTextChange">
       <button type='default'>日期选择</button>
     </picker>
   </view>
 </view>
</view>
